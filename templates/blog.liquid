<!-- /templates/blog.liquid -->
{% paginate blog.articles by 4 %}

<div class="grid lookbook">

  <!-- Fixed Sidebar -->
  <aside class="lookbook__list__wrapper">
    <div class="lookbook__list">
    </div>
  </aside>
  <div class="lookbook__social">
    {% if settings.social_sharing_products %}
      {% include 'social-sharing' %}
    {% endif %}
  </div>
    <!-- <header class="section-header text-center">
      <h1>
        {% if current_tags %}
          {{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}
        {% else %}
          {{ blog.title }}
        {% endif %}
      </h1>
    </header> -->

    <div class="grid__item large--whole lookbook__content">
      {% for article in blog.articles %}

        {% assign article_content = article.excerpt_or_content %}
        {% assign featured_image_src = '' %}
        {% assign article.id = article.id %}

        {% if article.image %}
          {% assign featured_image_src = article | img_url: 'master' %}
        {% elsif article_content contains '<img' %}
          {% assign featured_image_src = article_content | split: 'src="' %}
          {% assign featured_image_src = featured_image_src[1] | split: '"' | first %}
        {% endif %}

        <div class="lookbook__macrotrend--image__wrapper">
          <div class="lookbook__macrotrend--image__wrapper--crop-bottom">
            <img src="{{ article.image | img_url: "2048x2048" }}" alt="" class="lookbook__macrotrend--image">
          </div>
        </div>

        <!-- Lookbook Article List -->
        <div class="grid__item  push--large--one-eighth large--three-quarters lookbook__articles">

        <article class="grid lookbook__macrotrend" id="{{ article.id }}" data-id="{{ article.id }}">

            <h2 class="lookbook__microtrend--title" id="{{article.title | handleize}}">
              {{ article.title }}
            </h2>

          {% unless featured_image_src == blank %}
            <div class="grid__item one-whole lookbook__macrotrend--content">
              <div class="rte rte--indented-images">
                {{ article_content }}
              </div>
            </div>
            <div class="grid__item">
              <div class="microtrends grid-uniform"></div>
            </div>
          {% endunless %}
        </article>
        </div>

        {% unless forloop.last %}<hr class="hr--clear">{% endunless %}

      {% endfor %}
      <div class="grid__item text-center push--large--one-eighth large--three-quarters lookbook__articles lookbook__archive__link">
        <h2 class="lookbook__microtrend--title">Archive</h2>
        <a href="/blogs/archived" class="btn">View Archive</a>
      </div>
    </div>

    {% if paginate.pages > 1 %}
      <div class="pagination">
        {{ paginate | default_pagination | replace: '&laquo; Previous', '<span class="icon icon-arrow-left" aria-hidden="true"></span>' | replace: 'Next &raquo;', '<span class="icon icon-arrow-right" aria-hidden="true"></span>' }}
      </div>
    {% endif %}

</div>

{% endpaginate %}

<div id="the_archives">
  {% for article in blogs[blog.handle].articles limit: 10 offset:4 %}
  <li>{{ article.title | link_to: article.url }}</li>
{% endfor %}
</div>

{% include 'microtrends' %}
