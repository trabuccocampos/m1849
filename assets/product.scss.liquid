$viewportIncrement: 1px;
$siteWidth: 1200px;
$small: 590px;
$medium: 768px;
$large: 769px;
$stack_offset: 80;


$light-color: #fff;
$soft-grey: #E6E7E8;
$mid-grey: #aeb1b5;
$dark-grey: #333;
$dark-color: $dark-grey;
// $red: #D23719;
$red: #F5321E;

.product-card {
  height: 100%;
  display: inline-block;
  margin: 0;
  font-size: 0;
  position: relative;

  &:before {
    content: '';
    position: absolute;
    top: -12.5%;
    right: -12.5%;
    bottom: -12.5%;
    left: -12.5%;
    background-image: url('{{ "product-card-shadow.png" | asset_url }}');
    background-repeat: no-repeat;
    background-position: top center;
    background-size: 100% 100%;
    opacity: 0.5;
  }

  .color-code {
    position: absolute;
    top: 10px;
    right: 15px;
    color: white;
    font-size: 1.8rem;
    display: none;
    z-index: 1;
  }

  img {
    height: 100%;
    max-width: none;
    border-radius: 10px;
    position: relative;

    // box-shadow: 0 5px 8px rgba(0,0,0,0.3);
    // -webkit-filter: drop-shadow(4px 4px 8px rgba(0, 0, 0, 0.5));

  }

//  &.related-product img {
//    -webkit-filter: drop-shadow(2px 2px 5px rgba(0, 0, 0, 0.3));
//  }

}
.product-single {
  text-align: left;
  color: #a3a5a9;
  margin-bottom: 100px;

  .collections {
    a, a:hover {
      border: none;
    }

    h3 {
      font-size: 1.3em;
      font-weight: normal !important;
    }

    h4 {
      font-size: 0.9em;
    }
  }

  .specs {
    margin-bottom: 20px;

    table {
      background: transparent;
      width: 100%;
      margin-top: 10px;
      font-size: 0.9em;

      td {
        padding: 10px 0;
        border-bottom: 1px solid #eee;

        &:after {
          display: none;
        }
      }
    }
  }

  #AddToCartForm {
    margin: 30px 0;
  }
  .product-single__meta--wrapper {
    margin: 0;
    padding-right: 15px;
  }
  .product-single__meta {
    padding-top: 0;
  }

  .product-single__title {
    margin-bottom: 0;
  }

  .product-single__description {
    margin-top: 0;

    h2, h3, h4, h5 {
      text-align: left;
      margin: 0;
    }

    h2 {
      margin-bottom: 30px;
      font-size: 1.3em;
    }

    h3 {
      font-weight: bold;
    }

    &.rte .text-link {
      border-bottom: none;
    }
  }

  .product-images {
    height: 430px !important;
    position: relative;

    @media (max-width: $small) {
      height: 340px !important;

      .image-view-title {
        padding-top: 30px;
      }
    }

    .toggle-views {
      position: absolute;
      bottom: -72px;
      right: -112px;
    }

    @media (max-width: $medium) {
      margin-bottom: 80px;

      .toggle-views {
        right: 0;
        width: 30%;
        bottom: -62px;
      }
    }

    footer {
      position: absolute;
      top: 100%;
      width: 100%;
      text-align: center;
    }

    &[data-direction="back"] {
      .front-view-image {
        z-index: -1;
        opacity: 0;
        transition: none;
      }

      .side-view-images {
        left: 0;
      }

      .back-view-image {
        display: block;

        .image-view-title {
          visibility: visible;
        }
      }
    }
  }

  .front-view-image {
    // display: none;
    z-index: 2;
    position: absolute;
    left: 0;
    height: 100%;
    width: 70%;
    transition: opacity 0.3s ease;

    &:not([data-image-count="1"]):not([data-image-count="2"]):hover {
      opacity: 0;

      & ~ .stacked-images {
        opacity: 1;
        height: 100%;

        .product-card {

          $base-left: 70;
          $per-factor: 3.7;

          @for $i from 1 through 10 {
            &[data-image-count="#{$i}"] {
              $factor: $i*$per-factor;
              margin-left: -#{$base-left - $factor}#{"%"};

              @media (max-width: $small) {
                margin-left: -#{($base-left - $factor) * 1.218}#{"%"};
              }
            }
          }

          &:first-child {
            margin-left: 0;
          }
        }
      }
    }

    .front-view-container {
      height: 100%;
    }
  }

  .stacked-images {
    opacity: 0;
    position: absolute;
    width: 70%;
    box-sizing: border-box;
    transition: opacity 0.3s ease;

    .product-card {
      display: inline-block;
      position: relative;
      vertical-align: top;
      transition: margin-left 0.3s ease;
      border-radius: 13px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.4);
      height: auto;

      $base-left: 43;
      $per-factor: 2;

      @for $i from 1 through 10 {
        &[data-image-count="#{$i}"] {
          $factor: $i*$per-factor;
          margin-left: -#{$base-left - $factor}#{"%"};

          @media (max-width: $small) {
            margin-left: -#{($base-left - $factor) * 1.45}#{"%"};
          }
        }
      }

      img {
        height: auto;
        width: 100%;
      }

      &:first-child {
        margin-left: 0;
      }
    }

    @for $i from 1 through 10 {
      .product-card[data-image-count="#{$i}"] {
        $inset: (($i - 1) * $stack_offset) / $i;
        $width: percentage(1/$i);
        width: calc(#{$width} + #{$inset - 4}px);

        $offset_per_stack: 345 / ($i - 1);

        @for $j from 1 through 10 {
          &:nth-child(#{$j}) {
            $stack_offset_y: $offset_per_stack*($j - 1);
            margin-top: #{$stack_offset_y}px;
          }
        }


      }
    }
  }

  .side-view-images {
    position: absolute;
    right: 0;
    height: 100%;
    font-size: 0;
    width: 30%;

    &:before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: 1;
    }

    .side-view-container {
      display: inline-block;
      overflow: hidden;
      height: 100%;
      border-radius: 10px;
      -webkit-mask-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAIAAACQd1PeAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAA5JREFUeNpiYGBgAAgwAAAEAAGbA+oJAAAAAElFTkSuQmCC);
      mask-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAIAAACQd1PeAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAA5JREFUeNpiYGBgAAgwAAAEAAGbA+oJAAAAAElFTkSuQmCC);
      background: transparent;
    }

    figure {
      display: inline-block;
      overflow: hidden;
      height: 100%;
      width: 20px;
      margin: 0;
      padding: 0;
      position: relative;

      img {
        height: 100%;
        max-width: none;
        position: relative;
        left: -60%;

        @media (max-width: $small) {
          left: -985%;
        }
      }
    }
  }

  .back-view-image {
    display: none;
    position: absolute;
    right: 0;
    height: 100%;
    width: 70%;

    .image-view-title {
      visibility: hidden;
    }

    .back-view-container {
      height: 100%;

      .product-card {
        &:after {
          content: '';
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          z-index: 1;
        }
      }
    }
  }
}
.product-extras {
  // border-top: 1px solid #eee;
  padding: 20px 0;
  margin: 0 0 20px;

  &:after {
    content: '';
    clear: both;
    display: block;
  }

  h3 {
    color: {{ settings.light_color_body_text }};
  }

  .attachments {
    // width: 200px;
    // float: right;

    .btn {
      width: 100%;
      margin: 5px 0;
    }
  }

  @media (max-width: $small) {
    margin-bottom: 0;
  }
}
.related-products__wrapper {
  clear: both;
  background: #f5f5f5;
  margin-top: 2em;
  padding: 1em 0 0;
}
.related-lookbooks {
  &.grid {
    .grid__item:first-child {
      padding-left: 0;
    }
  }
  .lookbooks-container {
    font-size: 0;
  }

  .product-lookbook {
    display: inline-block;
    // width: 33.33%;
    font-size: 1rem;
    vertical-align: top;
    padding-right: 10px;
    box-sizing: border-box;

    h3 {
      margin: 0;
      font-size: 1em;
      clear: left;
    }

    p {
      font-size: 0.8em;
    }

    img {
      width: 70%;
      float: left;
      margin: 0 10px 10px 0;
    }
  }
}
.related-lookbooks a {
  transition: color 0.3s ease;

  svg#icon-specifications polygon,
  svg#icon-specifications polyline,
  svg#icon-specifications path,
  svg#icon-print polygon,
  svg#icon-print polyline,
  svg#icon-print path {
    stroke: $mid-grey;
    stroke-width: 1.5px;
    fill: none;
    transition: stroke 0.4s ease;

  }
  svg#icon-print rect {
    fill: $mid-grey;
    transition: fill 0.4s ease;
  }

  &:hover {
    svg#icon-specifications path,
    svg#icon-print path {
      stroke: $red;
    }
    svg#icon-print rect {
      fill: $red;
    }
    h3 {
      color: $red;
    }
  }
}

.related-products {
  .more-styles {
    float: right;
    font-size: 0.8em;
    color: {{ settings.light_color_body_text }};
  }

  .slick-slider .slick-dots li  {
    button:before {
      border-color: black;
    }

    &.slick-active {
      button:before {
        background: black;
        border-color: black;
      }
    }
  }

  .slick-prev:before, .slick-next:before {
    color: black;
  }
  .slick-dots {
    bottom: -10px;
  }
  .slick-prev:before {
    content: "\003c";
    font-family: "Courier New";
  }
  .slick-next:before {
    content: "\003e";
    font-family: "Courier New";
  }
  .related-product {
    display: inline-block;

    a {
      display: inline-block;
      padding: 10px;
    }

    img {
      height: 90px;
      border-radius: 4px;
    }
  }
}

.tabular {
  .tabs {
    font-size: 0;

    a {
      font-size: 1rem;
      padding: 5px 15px;
      opacity: 0.5;
      border-bottom: 2px solid #ddd;

      &.active {
        opacity: 1;
        border-color: black;
      }
    }
  }

  .tab-content {
    .tab {
      display: none;

      &.active {
        display: block;
      }
    }
  }
}
