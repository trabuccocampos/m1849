.product-single {
  text-align: left;
  color: #a3a5a9;
  margin-bottom: 100px;
  
  .specs {
    margin-bottom: 20px;
    
    table {
      background: transparent;
      width: 100%;
      margin-top: 10px;
      font-size: 0.9em;
      
      td {
        padding: 10px 0;
        border-bottom: 1px solid #eee;
        
        &:after {
          display: none;
        }
      }
    }
  }
  
  #AddToCartForm {
    margin: 30px 0;
  }
  
  .product-single__meta {
    padding-top: 0;
  }
  
  .product-single__title {
    margin-bottom: 0;
  }
  
  .product-single__description {
    margin-top: 0;
    
    h2, h3, h4, h5 {
      text-align: left;
      margin: 0;
    }
    
    h2 {
      margin-bottom: 30px;
      font-size: 1.3em;
    }
    
    h3 {
      font-weight: bold;
    }
  }
  
  .product-images {
    height: 430px;
    position: relative;
        
    .toggle-views {
      position: absolute;
      bottom: -65px;
      right: -115px;
    }
    
    @media (max-width: $medium) {
      margin-bottom: 120px;
      
      .toggle-views {
        right: 0;
        width: 30%;
        bottom: -110px;
      }
    }
    
    footer {
      position: absolute;
      top: 100%;
      width: 100%;
      text-align: center;
    }
    
    &[data-direction="back"] {
      .front-view-image {
        z-index: -1;
        opacity: 0;
        transition: none;
      }
      
      .side-view-images {
        left: 0;
      }
      
      .back-view-image {
        display: block;
        
        .image-view-title {
          visibility: visible;
        }
      }
    }
  }
    
  .front-view-image {
    z-index: 2;
    position: absolute;
    left: 0;
    height: 100%;
    width: 70%;
    transition: opacity 0.3s ease;
    
    &:hover {
      opacity: 0;
      
      & ~ .stacked-images {
        opacity: 1;
        
        .product-card:not(:first-child) {
          margin-left: -80px;
        }
      }
    }
    
    .front-view-container {
      height: 100%;
    }
  }
  
  .stacked-images {
    opacity: 0;
    position: absolute;
    width: 70%;
    box-sizing: border-box;
    transition: opacity 0.3s ease;
    
    .product-card {
      display: inline-block;
      position: relative;
      vertical-align: top;
      margin-left: -#{$stack_offset*2}px;
      transition: margin-left 0.3s ease;
      border-radius: 13px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.4);
      height: auto;
      
      img {
        height: auto;
        width: 100%;
      }
      
      &:first-child {
        margin-left: 0;
      }
    }
    
    @for $i from 1 through 10 {
      .product-card[data-image-count="#{$i}"] {
        $inset: (($i - 1) * $stack_offset) / $i;
        $width: percentage(1/$i);
        width: calc(#{$width} + #{$inset - 4}px);
      }
      
      .product-card:nth-child(#{$i}) {
        $stack_offset-y: ($i - 1)*$stack_offset;
        margin-top: #{$stack_offset-y}px;
      }
    }
  }
  
  .side-view-images {
    position: absolute;
    right: 0;
    height: 100%;
    font-size: 0;
    width: 30%;
    
    .side-view-container {
      display: inline-block;
      border-radius: 10px;
      overflow: hidden;
      height: 100%;
      border-radius: 10px;
      -webkit-mask-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAIAAACQd1PeAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAA5JREFUeNpiYGBgAAgwAAAEAAGbA+oJAAAAAElFTkSuQmCC);
    }
    
    figure {
      display: inline-block;
      overflow: hidden;
      height: 100%;
      width: 20px;
      margin: 0;
      padding: 0;
      
      img {
        height: 100%;
        max-width: none;
        position: relative;
        left: -50%;
      }
    }
  }
  
  .back-view-image {
    display: none;
    position: absolute;
    right: 0;
    height: 100%;
    width: 70%;
    
    .image-view-title {
      visibility: hidden;
    }
    
    .back-view-container {
      height: 100%;
    }
  }
}
.product-extras {
  border-top: 1px solid #eee;
  padding: 20px 0;
  margin: 20px 0;
  
  h3 {
    color: {{ settings.light_color_body_text }};
  }
}

.related-lookbooks {
  .lookbooks-container {
    font-size: 0;
  }
  
  .product-lookbook {
    display: inline-block;
    width: 33.33%;
    font-size: 1rem;
    vertical-align: top;
    padding-right: 10px;
    box-sizing: border-box;
    
    h3 {
      margin: 0;
      font-size: 1em;
    }
    
    p {
      font-size: 0.8em;
    }
    
    img {
      width: 50%;
      float: left;
      margin: 0 10px 10px 0;
    }
  }
}

.related-products {
  .more-styles {
    float: right;
    font-size: 0.8em;
    color: {{ settings.light_color_body_text }};
  }
  
  .slick-slider .slick-dots li  {
    button:before {
      border-color: black;
    }

    &.slick-active {
      button:before {
        background: black;
        border-color: black;
      }
    }
  }
  
  .slick-prev:before, .slick-next:before {
    color: black;
  }
  .slick-dots {
    bottom: -10px;
  }
  .slick-prev:before {
    content: "\003c";
    font-family: "Courier New";
  }
  .slick-next:before {
    content: "\003e";
    font-family: "Courier New";
  }
  .related-product {
    display: inline-block;
    
    a {
      display: inline-block;
      padding: 10px;
    }
    
    img {
      height: 90px;
      border-radius: 4px;
    }
  }
}

.tabular {
  .tabs {
    font-size: 0;
    
    a {
      font-size: 1rem;
      padding: 5px 15px;
      opacity: 0.5;
      border-bottom: 2px solid #ddd;
      
      &.active {
        opacity: 1;
        border-color: black;
      }
    }
  }
  
  .tab-content {
    .tab {
      display: none;
      
      &.active {
        display: block;
      }
    }
  }
}