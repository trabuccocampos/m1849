.lookbook {
  .microtrend {
    .slick-slider .slick-dots {
      li {
        button:before {
          background: #ccc;
        }

        &.slick-active {
          button:before {
            border-color: black;
            background: black;
          }
        }
      }
    }
  }
}

.archives {
  aside.filters {
    padding: 0;
    margin-top: 0;
  }

  .category {
    padding: 30px 0;
    border-bottom: 1px solid #eee;

    h1 {
      margin: 0 0 15px 0;
    }

    footer {
      padding-top: 35px;
    }
  }

  .pagination {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #eee;
  }
}

.journal-items {
  margin-top: 30px;

  .pagination {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #eee;
  }
}

.lookbook__list {
  li {
    list-style-type: none;
    cursor: pointer;
    color: gray;
    transition: color 0.1s ease;

    &.chapter-header {
      font-weight: bold;

      ul {
        font-weight: normal;
        display: none;
      }

      &.active {
        ul {
          display: block;
        }
      }
    }

    &.active {
      color: black;
      font-weight: bold;
    }
  }
}
