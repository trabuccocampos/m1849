}

.catalog, .archives {
  aside {
    padding: 3em 5px 0 0;

    h2 {
      font-size: 1.05em;
      font-weight: bold;

      a {
        color: $dark-color;
      }
    }

    ul {
      margin: 0;
      padding: 0;
    }

    li {
      font-size: 1.1em;
      margin: 0;
      padding: 5px 0;
      list-style-type: none;
      color: $dark-color;

      label {
        display: block;
      }

      a {
        color: $dark-color;
      }
    }
  }

  .sidemenu-list {
    a.active {
      font-weight: bold;
      color: black;
    }
  }

  .filters {
    margin-top: 70px;

    li {
      .filter {
        position: relative;
        display: block;
        cursor: pointer;

        &:after {
          content: "^";
          position: absolute;
          right: 0;
          top: -0.1em;
          font-family: "Courier New";
          font-size: 2.2em;
        }

        &.active {
          &:after {
            transform: rotate(180deg);
            top: -0.6em;
          }
        }

      }

      a.filter {
        &:after, &.active:after {
          transform: rotate(90deg);
          top: -0.4em;
          right: 0.2em;
        }
      }

      section {
        display: none;
      }
    }
  }

  .catalog-content {
    padding-top: 3em;
    border-left: 1px solid {{ settings.color_drawer_border }};
    min-height: 80vh;

    .collection {
      margin: 20px 0;

      &:first-child {
        margin-top: 0;
      }

      h2 {
        font-size: 1.3em;
        color: $dark-color;
      }

      .collection-products {

        $margin-right: 10px;

        .product-card {
          margin: 5px $margin-right 5px 0;

          img {
            height: 90px;
            border-radius: 4px;
          }
          @media (max-width: 768px) {
            img {
              height: 94px;
            }
          }
          @media (max-width: 425px) {
            &:nth-child(5n) {
              margin-right: 0;
            }
            img {
              height: 94px;
            }
          }
          @media (max-width: 375px) {
            &:nth-child(5n) {
              margin-right: $margin-right;
            }
            &:nth-child(4n) {
              margin-right: 0;
            }
            img {
              height: 88px;
            }
          }
          @media (max-width: 319px) {
            &:nth-child(4n) {
              margin-right: $margin-right;
            }
          }
        }
      }
    }
    .collection-actionable {
      margin-left: 10px;
      float: right;
      margin-top: 0;

      .btn {
        margin-left: 10px;
      }

      .back-button {
        margin-top: .4em;
      }
    }
  }
  .collection-footer {
    text-align: center;
  }
}
