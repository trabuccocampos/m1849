// Responsive Styles
@media screen and (max-width: $medium) {
  .grid.catalog {
    aside {
      padding-top: 2em;
    }
    .catalog-content {
      padding-top: 1em;
    }
    .filters {
      display: none;
    }

    .sidemenu-list {
      overflow: scroll;
      white-space: nowrap;
      border-top: 1px solid $soft-grey;
      border-bottom: 1px solid $soft-grey;
      &::-webkit-scrollbar {
          display: none;
      }
      &::before {
        content: 'Collections';
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 12px;
        font-weight: 600;
        color: $mid-grey;
        margin-right: 10px;
      }
      li {
        // &::after {
