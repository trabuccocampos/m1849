$dark-color: {{ settings.light_color_body_text }};

.template-collection, .template-list-collections {
  .main-content {
    padding-top: 0;
  }
}

.catalog {
  aside {
    padding: 40px 5px 0 0;

    h2 {
      font-size: 1.05em;
      font-weight: bold;

      a {
        color: $dark-color;
      }
    }

    ul {
      margin: 0;
      padding: 0;
    }

    li {
      border-bottom: 1px solid {{ settings.color_drawer_border }};
      font-size: 1.1em;
      margin: 0;
      padding: 5px 0;
      list-style-type: none;
      color: $dark-color;

      label {
        display: block;
        margin-left: 10px;
      }

      a {
        color: $dark-color;
      }
    }
  }

  .filters {
    margin-top: 70px;

    li {
      .filter {
        position: relative;
        display: block;
        cursor: pointer;

        &:after {
          content: "^";
          position: absolute;
          right: 0;
          top: -0.1em;
          font-family: "Courier New";
          font-size: 2.2em;
        }

        &.active {
          &:after {
            transform: rotate(180deg);
            top: -0.6em;
          }
        }

      }

      a.filter {
        &:after, &.active:after {
          transform: rotate(90deg);
          top: -0.4em;
          right: 0.2em;
        }
      }

      section {
        display: none;
      }
    }
  }

  .catalog-content {
    padding-top: 20px;
    border-left: 1px solid {{ settings.color_drawer_border }};
    min-height: 80vh;

    .collection {
      margin: 20px 0;

      h2 {
        font-size: 1.3em;
        color: $dark-color;
      }

      .collection-products {
        img {
          height: 90px;
          border-radius: 4px;
          // box-shadow: 0 2px 6px rgba(0,0,0,0.6);
          margin: 5px 10px 5px 0;
          -webkit-filter: drop-shadow(2px 2px 5px rgba(0, 0, 0, 0.3));
        }
      }
    }

    .collection-actionable {
      margin-left: 10pxg;
      float: right;
    }
  }

  .collection-footer {
    text-align: center;
  }
}

