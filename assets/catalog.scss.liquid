.template-cart {
  #contact_form {
    .note {
      margin-bottom: 40px;
      text-align: center;
    }
  }

  .remove-from-cart {
    text-transform: uppercase;
    font-size: 0.7em;
    letter-spacing: 1px;
    font-weight: normal;
    color: {{ settings.light_color_body_text }};
  }

  .cart-footer {
    text-align: center;
    margin-top: 80px;
  }
}

// Colors
.catalog aside .filter-by-color {
  section {
    font-size: 0;
  }

  label {
    height: 20px;
    width: 20px;
    display: inline-block;
    margin: 5px;
  }

  input[type="checkbox"] {
    display: none;
  }

  .blue {
    background: blue;
  }

  .red {
    background: red;
  }
}

.check-buttons {
  input[type="checkbox"] {
    display: none;

    &:checked {
      + label {
        background: #333;
        color: white;
      }
    }
  }

  label {
    background: #eee;
    padding: 10px;
    text-style: normal;
  }
}
